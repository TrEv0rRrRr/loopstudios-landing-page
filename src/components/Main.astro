---
import { fontAlata, fontJosefin } from "../variables/FontVariables";

const OurCreations = {
  title: "OUR CREATIONS",
  creations: [
    {
      title: "DEEP\nEARTH",
      img: {
        mobile: "/src/assets/images/mobile/OurCreations/image-deep-earth.jpg",
        desktop: "/src/assets/images/desktop/OurCreations/image-deep-earth.jpg",
      },
    },
    {
      title: "NIGHT\nARCADE",
      img: {
        mobile: "/src/assets/images/mobile/OurCreations/image-night-arcade.jpg",
        desktop:
          "/src/assets/images/desktop/OurCreations/image-night-arcade.jpg",
      },
    },
    {
      title: "SOCCER\nTEAM VR",
      img: {
        mobile: "/src/assets/images/mobile/OurCreations/image-soccer-team.jpg",
        desktop:
          "/src/assets/images/desktop/OurCreations/image-soccer-team.jpg",
      },
    },
    {
      title: "THE\nGRID",
      img: {
        mobile: "/src/assets/images/mobile/OurCreations/image-grid.jpg",
        desktop: "/src/assets/images/desktop/OurCreations/image-grid.jpg",
      },
    },
    {
      title: "FROM UP\nABOVE VR",
      img: {
        mobile: "/src/assets/images/mobile/OurCreations/image-from-above.jpg",
        desktop: "/src/assets/images/desktop/OurCreations/image-from-above.jpg",
      },
    },
    {
      title: "POCKET\nBOREALIS",
      img: {
        mobile:
          "/src/assets/images/mobile/OurCreations/image-pocket-borealis.jpg",
        desktop:
          "/src/assets/images/desktop/OurCreations/image-pocket-borealis.jpg",
      },
    },
    {
      title: "THE\nCURIOSITY",
      img: {
        mobile: "/src/assets/images/mobile/OurCreations/image-curiosity.jpg",
        desktop: "/src/assets/images/desktop/OurCreations/image-curiosity.jpg",
      },
    },
    {
      title: "MAKE IT\nFISHEYE",
      img: {
        mobile: "/src/assets/images/mobile/OurCreations/image-fisheye.jpg",
        desktop: "/src/assets/images/desktop/OurCreations/image-fisheye.jpg",
      },
    },
  ],
};

const { title, creations } = OurCreations;
---

<main
  class="flex flex-col px-8 items-center justify-center gap-10 w-full flex-1 mb-20"
>
  <section class="flex flex-col gap-10 items-center mb-14">
    <picture>
      <source
        media="(min-width: 1280px)"
        srcset="/src/assets/images/desktop/image-interactive.jpg"
      />
      <img src="/src/assets/images/mobile/image-interactive.jpg" alt="" />
    </picture>
    <article class="text-center flex flex-col gap-4 px-4">
      <h1
        class={`text-[2.1rem] ${fontJosefin} text-black leading-[1] text-balance`}
      >
        THE LEADER IN INTERACTIVE VR
      </h1>
      <p class={`${fontAlata} text-Dark-Gray text-balance leading-[1.7]`}>
        Founded in 2011, Loopstudios has been producing world-class virtual
        reality projects for some of the best companies around the globe. Our
        award-winning creations have transformed businesses through digital
        experiences that bind to their brand.
      </p>
    </article>
  </section>

  <h1 class={`text-3xl ${fontJosefin} text-black`}>{title}</h1>
  <section class="ImageContainer flex flex-col items-center gap-6">
    {
      creations.map(({ title, img }) => {
        return (
          <article class="relative hover:cursor-pointer">
            <picture>
              <source media="(min-width: 1280px)" srcset={img.desktop} />
              <img src={img.mobile} alt="" />
            </picture>
            <div class="overlayP w-1/2 h-full absolute z-10 top-0 left-0" />
            <p
              class={`top-[3.5rem] left-4 absolute text-white text-2xl  leading-[1.5rem] whitespace-pre-line ${fontJosefin} z-30`}
            >
              {title}
            </p>
            <div class="overlayA w-full h-full absolute top-0 left-0 bg-white opacity-0 transition-all z-20" />
          </article>
        );
      })
    }
  </section>

  <button
    class={`${fontAlata} px-10 py-[.65rem] border-2 border-black tracking-[.30rem] flex items-center justify-center hover:bg-black hover:text-white transition-all`}
  >
    SEE ALL
  </button>
</main>

<style>
  .overlayP {
    background: linear-gradient(to right, rgba(0, 0, 0, 0.65), transparent);
  }

  article:hover .overlayA {
    opacity: 0.7;
  }

  article:hover p {
    @apply text-black;
  }

  @media screen and (min-width: 1280px) {
    .ImageContainer {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      grid-template-rows: repeat(2, 1fr);
    }
  }
</style>
